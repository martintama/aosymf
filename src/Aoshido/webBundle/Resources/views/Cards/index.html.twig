{% extends 'AoshidowebBundle:Cards:layout.html.twig' %}

{% block cards_contenido %}
    <div class="col-md-12 container greenbckg">
        <div class="col-md-8 col-md-offset-4 navigation">
            {{ knp_pagination_render(paginas) }}
        </div>
        {% for pregunta in paginas %}
            <div class="col-xs-3">
                <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
                    <div class="flipper">
                        <div class="front card_back">
                            <p class="card_back_text">
                                {{ pregunta.contenido }}
                            </p>
                        </div>
                        <div class="back card_front card_club">
                            <p class="card_front_text">
                                {% for respuesta in pregunta.respuestas %}
                                    {{ respuesta.contenido }}
                                {% endfor %}
                                <button type="button" class="btn btn-info" onclick="location.href = '{{ url('respuestas_new',{ 'idPregunta': pregunta.id}) }}';">                                    
                                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                                    Justificacion
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {% if (loop.index % 4) == 0%}
                <div class="col-xs-12">
                    <div class="container">
                    </div>
                </div>
            {% endif %}
        {% endfor %}
        <div class="col-md-8 col-md-offset-4 navigation">
            {{ knp_pagination_render(paginas) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %} 
    {{ parent() }}
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}